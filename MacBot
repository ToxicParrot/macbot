print ('(great)(okay)(not great)')

feeling = input()

if feeling == ('great'):
    print ("That's good!")
if feeling == ('okay'):
    print ('Good good')
if feeling == ('not great'):
    print ("Oh sorry, what's wrong?")
    print ("(type what's wrong)")
    
    problem = input()
    
    problem = random.getrandbits(1)
    
    if problem == 1:
        print ("Oh I'm sure you can sort that out!")
    if problem == 0:
        print ('That sucks!')

# Games

