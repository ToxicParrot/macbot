game = input()

if game == ('yes'):
    print ('oh cool! what games do you enjoy?')
    print ('(type a game)')

    gamechoice = input()
    
    gamegen = random.getrandbits(1)

    if gamegen == 1:
        print ('I love that game!')
    if gamegen == 0:
        print ('I never really liked that game')

if game == ('no'):
    print ('So do you prefer to be outside, or do other')
